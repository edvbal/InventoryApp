<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RootLayoutMain"
    tools:context="com.example.android.inventoryapp.MainActivity">

    <ListView
        android:id="@+id/listView"
        style="@style/ListView" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        style="@style/FloatingActionButton"
        android:src="@drawable/add_fab" />

    <RelativeLayout
        android:id="@+id/empty_view"
        style="@style/EmptyViewLayout">

        <ImageView
            android:id="@+id/empty_shelter_image"
            style="@style/EmptyViewImage"
            android:src="@drawable/empty_cart" />

        <TextView
            android:id="@+id/empty_title_text"
            style="@style/EmptyViewText1"
            android:layout_below="@+id/empty_shelter_image"
            android:text="@string/empty_view_title_text" />

        <TextView
            android:id="@+id/empty_subtitle_text"
            style="@style/EmptyViewText2"
            android:layout_below="@+id/empty_title_text"
            android:text="@string/empty_view_subtitle_text" />
    </RelativeLayout>

</RelativeLayout>
